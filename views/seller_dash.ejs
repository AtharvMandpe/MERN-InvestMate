	<script>
		const requestCompleted = document.getElementById('request-completed');
		const table = document.getElementById('myTable');
		let count = 0;
	  
		table.querySelectorAll('tr').forEach(row => {
		  const checkboxIcon = row.querySelector('.fa-square, .fa-square-check');
		  if (checkboxIcon && checkboxIcon.classList.contains('fa-square-check')) {
			count++;
		  }
		});
	  
		requestCompleted.textContent = count;
	  </script>
	  
