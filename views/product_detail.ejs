    <section class="product-page">
        <!--img-->
        <img class="product-page-img" src="/backend_images/<%= product.Image %>" alt="..." />
        <!--details-->
        <div class="product-page-details">

            <!--title-->
            <strong>
                <%= product.Title %>
            </strong>

            <span class="price">â‚¹ <%= product.Price %></span>
